.chat-main
  .main-header
    .main-header__box
      .main-header__box__test
        = @group.name
      .main-header__box__member
        member :
        .main-header__box__member--name
          - @group.users.each do |user|
            = user.name
    .main-header__edit
    = link_to edit_group_path(@group[:id]), class:"main-header__edit--btn" do
      edit
  .main-contents
    = render @messages


