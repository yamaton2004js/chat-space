  = form_for [@group, @message] do |f|
    .main-form
      .main-form__box
        = f.text_field :content, class: 'main-form__box__text', placeholder: 'type a message'
        = f.label :image, class: 'main-form__box__image' do
          = icon("fas", "image")
          = f.file_field :image,  class: 'main-form__box__image--file'
      .main-form__submit
        = f.submit 'send', class: 'main-form__submit--btn'
